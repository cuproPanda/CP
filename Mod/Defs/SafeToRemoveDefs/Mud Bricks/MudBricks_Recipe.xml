<?xml version="1.0" encoding="utf-8" ?>
<RecipeDefs>
	<RecipeDef>
		<defName>CP_MakeMudbricks</defName>
		<label>make mudbricks</label>
		<description>Make mudbricks by mixing dirt, hay, and sand.</description>
		<jobString>Making mudbricks.</jobString>
		<workSpeedStat>BrewingSpeed</workSpeedStat>
		<workAmount>500</workAmount>
		<effectWorking>ConstructDirt</effectWorking>
		<soundWorking>Interact_ConstructDirt</soundWorking>
		<allowMixingIngredients>true</allowMixingIngredients>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<!-- Mud is implied, since it would just require rain/standing water -->
						<!-- Make this recipe require water if rainwater is implemented? 		-->
						<li>CP_Dirt</li> 
					</thingDefs>
				</filter>
				<count>15</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Hay</li>
					</thingDefs>
				</filter>
				<count>5</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>CP_Sand</li>
						<li>CP_Clay</li>
					</thingDefs>
				</filter>
				<count>8</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>CP_Dirt</li>
				<li>Hay</li>
				<li>CP_Sand</li>
				<li>CP_Clay</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<CP_WetMudbrick>15</CP_WetMudbrick>
		</products>
		<recipeUsers>
			<li>CP_TableSimpleCrafting</li>
		</recipeUsers>
		<workSkill>Crafting</workSkill>
		<skillRequirements>
			<li>
				<skill>Crafting</skill>
				<minLevel>3</minLevel>
			</li>
		</skillRequirements>
	</RecipeDef>

	<RecipeDef>
		<defName>CP_BakeMudbricks</defName>
		<label>bake mudbricks</label>
		<description>Dry out mudbricks to produce a simple building material.</description>
		<jobString>Baking mudbricks.</jobString>
		<workAmount>1200</workAmount>
		<workSpeedStat>SmeltingSpeed</workSpeedStat>
		<effectWorking>Smelt</effectWorking>
		<soundWorking>Recipe_Smelt</soundWorking>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>CP_WetMudbrick</li>
					</thingDefs>
				</filter>
				<count>15</count>
			</li>
		</ingredients>
		<products>
			<CP_Mudbrick>15</CP_Mudbrick>
		</products>
		<fixedIngredientFilter>
			<thingDefs>
				<li>CP_WetMudbrick</li>
			</thingDefs>
		</fixedIngredientFilter>
		<recipeUsers>
			<li>CP_Furnace</li>
		</recipeUsers>
	</RecipeDef>
</RecipeDefs>