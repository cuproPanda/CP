		<description>A sink for washing hands, dishes, tools, etc. Increases overall room cleanliness, which helps reduce food poisoning and infection chance. Refuel with fresh water every few days.</description>
		<graphicData>
			<texPath>Cupro/Object/Furniture/Sink/Sink</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<damageData>
				<rect>(0.15,0.15,1.7,1.7)</rect>
			</damageData>
		</graphicData>
		<size>(1,1)</size>
		<rotatable>true</rotatable>
		<altitudeLayer>Building</altitudeLayer>
		<passability>PassThroughOnly</passability>
		<blockLight>false</blockLight>
		<fillPercent>0.5</fillPercent>
