<?xml version="1.0" encoding="utf-8" ?>
<ThingDefs>  

	<ThingDef Name="ChandelierBase" ParentName="FurnitureBase" Abstract="True">
		<category>Building</category>
		<graphicData>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<rotatable>false</rotatable>
		<fillPercent>0</fillPercent>
		<passability>Standable</passability>
		<selectable>true</selectable>
		<leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
		<soundImpactDefault>BulletImpactMetal</soundImpactDefault>
		<altitudeLayer>FlyingItem</altitudeLayer>
		<pathCost>0</pathCost>
		<statBases>
			<Flammability>0</Flammability>
		</statBases>
		<building>
			<isEdifice>false</isEdifice>
		</building>
	</ThingDef>
	
	
	<ThingDef Name="ChandelierBowlBase" ParentName="ChandelierBase" Abstract="True">
		<thingClass>CorePanda.Building_ChandelierBowl</thingClass>
		<graphicData>
			<texPath>Cupro/Object/Furniture/Chandelier/ChandelierGlass</texPath>
			<shaderType>Transparent</shaderType>
			<drawSize>(2,2)</drawSize>
		</graphicData>
		<designationCategory>Unplaceable</designationCategory>
		<size>(2,2)</size>
		<selectable>false</selectable>
		<stuffCategories>
			<li>CP_Glass</li>
		</stuffCategories>
		<costStuffCount>25</costStuffCount>
		<altitudeLayer>MoteOverhead</altitudeLayer>
		<tickerType>Rare</tickerType>
	</ThingDef>
	
	
	<ThingDef Name="ChandelierSupportBase" ParentName="ChandelierBase" Abstract="True">
		<thingClass>CorePanda.Building_Chandelier</thingClass>
		<graphicData>
			<texPath>Cupro/Object/Furniture/Chandelier/Chandelier</texPath>
			<shaderType>CutoutComplex</shaderType>
			<drawSize>(2,2)</drawSize>
		</graphicData>
		<designationCategory>Furniture</designationCategory>
		<size>(2,2)</size>
		<stuffCategories>
			<li>Metallic</li>
		</stuffCategories>
		<costStuffCount>45</costStuffCount>
		<altitudeLayer>FlyingItem</altitudeLayer>
		<statBases>
			<WorkToMake>500</WorkToMake>
		</statBases>
		<tickerType>Rare</tickerType>
		<placeWorkers>
			<li>CorePanda.PlaceWorker_Roofed</li>
			<li>CorePanda.PlaceWorker_Chandelier</li>
		</placeWorkers>
		<tradeTags>
      <li>Furniture</li>
    </tradeTags>
		<Comps>
			<li>
				<compClass>CompQuality</compClass>
			</li>
			<li Class="CompProperties_Power">
				<compClass>CompPowerTrader</compClass>
				<basePowerConsumption>150</basePowerConsumption>
				<shortCircuitInRain>false</shortCircuitInRain>
			</li>
			<li Class="CorePanda.CompProperties_Hanger">
				<HangingType>Ceiling</HangingType>
			</li>
			<li Class="CompProperties_Flickable"/>
			<li Class="CompProperties_Art">
				<nameMaker>ArtName_Furniture</nameMaker>
				<descriptionMaker>ArtDescription_Furniture</descriptionMaker>
				<minQualityForArtistic>Masterwork</minQualityForArtistic>
			</li>
		</Comps>
	</ThingDef>


	<!-- ========================== Inheritors ============================== -->



	<ThingDef ParentName="ChandelierSupportBase">
		<defName>CP_Chandelier_Glass</defName>
		<label>chandelier (glass)</label>
		<description>A simple chandelier with a glass bowl underneath. Can be hung from the ceiling over most objects.</description>
		<statBases>
			<Beauty>20</Beauty>
		</statBases>
		<costList>
			<CP_Glass>8</CP_Glass>
		</costList>
		<Comps>
			<li Class="CompProperties_Glower">
				<glowRadius>13</glowRadius>
				<glowColor>(200,200,200,0)</glowColor>
			</li>
		</Comps>
	</ThingDef>

	<ThingDef ParentName="ChandelierSupportBase">
		<defName>CP_Chandelier_Quartz</defName>
		<label>chandelier (quartz)</label>
		<description>A simple chandelier with a quartz bowl underneath. Can be hung from the ceiling over most objects.</description>
		<statBases>
			<Beauty>30</Beauty>
		</statBases>
		<costList>
			<CP_FusedQuartz>8</CP_FusedQuartz>
		</costList>
		<Comps>
			<li Class="CompProperties_Glower">
				<glowRadius>14</glowRadius>
				<glowColor>(208,208,208,0)</glowColor>
			</li>
		</Comps>
	</ThingDef>
	
	
	<ThingDef ParentName="ChandelierBowlBase">
		<defName>CP_ChandelierPart_Bowl</defName>
		<label>chandelier bowl</label>
		<description>null</description>
	</ThingDef>

</ThingDefs>