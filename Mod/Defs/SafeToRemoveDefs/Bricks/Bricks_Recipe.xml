<?xml version="1.0" encoding="utf-8" ?>
<RecipeDefs>

	<RecipeDef>
		<defName>CP_MakeBricks</defName>
		<label>make bricks</label>
		<description>Make bricks by mixing clay and sand.</description>
		<jobString>Making bricks.</jobString>
		<workSpeedStat>BrewingSpeed</workSpeedStat>
		<workAmount>500</workAmount>
		<effectWorking>ConstructDirt</effectWorking>
		<soundWorking>Interact_ConstructDirt</soundWorking>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>CP_Clay</li> 
					</thingDefs>
				</filter>
				<count>15</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>CP_Sand</li>
					</thingDefs>
				</filter>
				<count>15</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>CP_Clay</li>
				<li>CP_Sand</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<CP_WetBrick>15</CP_WetBrick>
		</products>
		<recipeUsers>
			<li>CP_TableSimpleCrafting</li>
		</recipeUsers>
		<workSkill>Crafting</workSkill>
		<skillRequirements>
			<li>
				<skill>Crafting</skill>
				<minLevel>3</minLevel>
			</li>
		</skillRequirements>
	</RecipeDef>

	<RecipeDef>
		<defName>CP_BakeBricks</defName>
		<label>bake bricks</label>
		<description>Dry out bricks to produce a simple building material.</description>
		<jobString>Baking bricks.</jobString>
		<workAmount>1200</workAmount>
		<workSpeedStat>SmeltingSpeed</workSpeedStat>
		<effectWorking>Smelt</effectWorking>
		<soundWorking>Recipe_Smelt</soundWorking>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>CP_WetBrick</li>
					</thingDefs>
				</filter>
				<count>15</count>
			</li>
		</ingredients>
		<products>
			<CP_Brick>15</CP_Brick>
		</products>
		<fixedIngredientFilter>
			<thingDefs>
				<li>CP_WetBrick</li>
			</thingDefs>
		</fixedIngredientFilter>
		<recipeUsers>
			<li>CP_Furnace</li>
		</recipeUsers>
	</RecipeDef>

</RecipeDefs>