<?xml version="1.0" encoding="utf-8" ?>
<Plants>

	<ThingDef ParentName="PlantBase">
		<defName>CP_PlantOutdoorSpectago</defName>
		<label>spectago</label>
		<description>One of the few known breeds of photochromic flowers, each petal of the spectago plant changes color throughout the month depending on how much light they are exposed to, the nutrients they get, and their overall mood.</description>
		<statBases>
			<MaxHitPoints>85</MaxHitPoints>
			<Beauty>35</Beauty>
		</statBases>
		<graphicData>
			<texPath>Cupro/Object/Plant/Spectago_Outdoors</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<altitudeLayer>Item</altitudeLayer>
		<selectable>true</selectable>
		<ingestible>
			<foodType>Plant</foodType>
			<preferability>NeverForNutrition</preferability>
			<nutrition>0.10</nutrition>
		</ingestible>
		<plant>
			<dieIfLeafless>true</dieIfLeafless>
			<harvestTag>Standard</harvestTag>
			<harvestedThingDef>CP_RainbowPetals</harvestedThingDef>
			<harvestYield>6</harvestYield>
			<harvestDestroys>true</harvestDestroys>
			<sowWork>400</sowWork>
			<sowTags>
				<li>Ground</li>
				<li>Hydroponic</li>
			</sowTags>
			<growMinGlow>0.6</growMinGlow>
			<topWindExposure>0.1</topWindExposure>
			<growDays>8</growDays>
			<lifespanFraction>3</lifespanFraction>
			<fertilityFactorGrowthRate>0.9</fertilityFactorGrowthRate>
			<wildCommonalityMaxFraction>0.5</wildCommonalityMaxFraction>
			<wildBiomes>
				<TropicalRainforest>0.10</TropicalRainforest>
				<TemperateForest>0.08</TemperateForest>
				<AridShrubland>0.06</AridShrubland>
				<BorealForest>0.05</BorealForest>
				<Desert>0.04</Desert>
				<ExtremeDesert>0.03</ExtremeDesert>
				<Tundra>0.02</Tundra>
			</wildBiomes>
			<wildClusterSizeRange>
				<min>1</min>
				<max>3</max>
			</wildClusterSizeRange>
			<wildClusterRadius>6</wildClusterRadius>
			<visualSizeRange>
				<min>0.3</min>
				<max>1.5</max>
			</visualSizeRange>
		</plant>
	</ThingDef>

	<ThingDef ParentName="PlantBase">
		<defName>CP_PlantIndoorSpectago</defName>
		<label>spectago</label>
		<description>When grown indoors, the spectago flower doesn't gain the needed nutrients to produce useful petals.</description>
		<statBases>
			<MaxHitPoints>85</MaxHitPoints>
			<Beauty>25</Beauty>
		</statBases>
		<graphicData>
			<texPath>Cupro/Object/Plant/Spectago_Indoors</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<altitudeLayer>Item</altitudeLayer>
		<selectable>true</selectable>
		<ingestible>
			<foodType>Plant</foodType>
			<preferability>NeverForNutrition</preferability>
			<nutrition>0.10</nutrition>
		</ingestible>
		<plant>
			<dieIfLeafless>true</dieIfLeafless>
			<harvestTag>Standard</harvestTag>
			<harvestDestroys>true</harvestDestroys>
			<sowWork>400</sowWork>
			<sowTags>
				<li>Decorative</li>
			</sowTags>
			<growMinGlow>0.3</growMinGlow>
			<topWindExposure>0.1</topWindExposure>
			<growDays>3</growDays>
			<lifespanFraction>3</lifespanFraction>
			<fertilityFactorGrowthRate>1</fertilityFactorGrowthRate>
			<visualSizeRange>
				<min>0.3</min>
				<max>1.05</max>
			</visualSizeRange>
		</plant>
	</ThingDef>

	<ThingDef ParentName="PlantBase">
		<defName>CP_PlantRubber</defName>
		<label>rubber plant</label>
		<description>A highly resinous inedible tuber grown as a small source of natural rubber. Grows well even in somewhat poor soil. Harvests quickly.</description>
		<statBases>
			<MaxHitPoints>85</MaxHitPoints>
			<Beauty>1</Beauty>
		</statBases>
		<graphicData>
			<texPath>Cupro/Object/Plant/RubberPlant</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<selectable>true</selectable>
		<pathCost>10</pathCost>
		<ingestible>
			<foodType>Plant</foodType>
			<preferability>NeverForNutrition</preferability>
			<nutrition>0.10</nutrition>
		</ingestible>
		<plant>
			<dieIfLeafless>true</dieIfLeafless>
			<shootsSeeds>false</shootsSeeds>
			<harvestTag>Standard</harvestTag>
			<harvestedThingDef>CP_RawRubber</harvestedThingDef>
			<harvestDestroys>true</harvestDestroys>
			<harvestYield>4</harvestYield>
			<sowTags>
				<li>Ground</li>
				<li>Hydroponic</li>
			</sowTags>
			<topWindExposure>0.2</topWindExposure>
			<growDays>4</growDays>
			<fertilityFactorGrowthRate>0.4</fertilityFactorGrowthRate>
			<visualSizeRange>
				<min>0.35</min>
				<max>1.15</max>
			</visualSizeRange>
		</plant>
	</ThingDef>

</Plants>